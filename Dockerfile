FROM node:18-alpine AS build

WORKDIR /app

ARG VITE_BASE_API_URL
ARG VITE_YMAP_KEY
ARG VITE_YMAP_SEARCH_RESULTS_COUNT
ARG VITE_ANALYTICS_AMPLITUDE_KEY
ARG VITE_IDRAM_ORDER_ID_URL_PREFIX
ARG VITE_FIREBASE_VAPID_KEY

ENV VITE_BASE_API_URL=$VITE_BASE_API_URL
ENV VITE_YMAP_KEY=$VITE_YMAP_KEY
ENV VITE_YMAP_SEARCH_RESULTS_COUNT=$VITE_YMAP_SEARCH_RESULTS_COUNT
ENV VITE_ANALYTICS_AMPLITUDE_KEY=$VITE_ANALYTICS_AMPLITUDE_KEY
ENV VITE_IDRAM_ORDER_ID_URL_PREFIX=$VITE_IDRAM_ORDER_ID_URL_PREFIX
ENV VITE_FIREBASE_VAPID_KEY=$VITE_FIREBASE_VAPID_KEY

COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

FROM nginx:stable-alpine
COPY --from=build /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
